<h1>Sign Up</h1>

<div class="row">
    <form method="POST" action="/auth/signup" class="col s12">
        <div class="row">
            <div class="row">
                <div class="input-field col s6">
                    <input id="first" type="text" class="validate" name="first">
                    <label for="email">First Name</label>
                </div>
                <div class="input-field col s6">
                    <input id="last" type="text" class="validate" name="last">
                    <label for="email">Last Name</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="email" type="email" class="validate" name="email">
                    <label for="email">Email</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <input id="password" type="password" class="validate" name="password">
                    <label for="password">Password</label>
                </div>
                <div class="input-field col s6">
                    <input id="verify_password" type="password" class="validate" name="verify_password">
                    <label for="verify_password">Verify Password</label>
                </div>
            </div>
            <button class="btn waves-effect waves-light" type="submit" name="action">Sign Up
                <i class="material-icons right">send</i>
            </button>
        </div>
    </form>
</div>